@model List<Category>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
    </div>
    <div class="text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>   Create New Category
        </a>   
    </div>
</div>
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr class="table-dark">
            <th>
                Id
            </th>
         <th>
            Category Name 
        </th>
         <th>
            Display Order
        </th>
        <th> 
       
        </th>
        <th>

        </th>

        </tr>
        
    </thead>
    <tbody>
        @foreach(Category item in Model.OrderBy(u=>u.DisplayOrder)){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id= "@item.Id" 
                        class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                        class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>