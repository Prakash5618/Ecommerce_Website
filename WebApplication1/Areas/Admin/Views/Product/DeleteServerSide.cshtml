@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3" row>
            <label class="p-0">Title</label>
            <input asp-for="Title" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3" row>
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" disabled class="form-control">
        </div>
        <div class="mb-3" row>
            <label asp-for="Model" class="p-0"></label>
            <input asp-for="Model" type="text" disabled class="form-control">
        </div>
        <div class="mb-3" row>
            <label asp-for="ListPrice" class="p-0"></label>
            <input asp-for="ListPrice" type="number" disabled class="form-control">
        </div>
        <div class="mb-3" row>
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" type="number" disabled class="form-control">
        </div>
        <div class="mb-3" row>
            <label asp-for="Price50" class="p-0"></label>
            <input asp-for="Price50" type="number" disabled class="form-control">
        </div>
        <div class="mb-3" row>
            <label asp-for="Price100" class="p-0"></label>
            <input asp-for="Price100" type="number" disabled class="form-control">
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-danger" style="width:150px" data-bs-dismiss="alert">
                Delete
            </button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary"
               style="width:150px">Back to List</a>
        </div>
</form>